{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-std=c++17",
                "-I./include",
                "-I./include/canvas",
                "-I./include/canvas/color",
                "-I./include/canvas/draw",
                "-I./dependencies",
                "-I./dependencies/open_gl",
                "-I./dependencies/lodepng",
                "-L./dependencies/open_gl/lib",
                "./dependencies/open_gl/glad/glad.c",
                "./dependencies/lodepng/lodepng.cpp",
                "-lglfw3dll",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
